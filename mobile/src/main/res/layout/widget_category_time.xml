<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today's Screen Time"
        android:textColor="#CDD6F4"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Total Time -->
    <TextView
        android:id="@+id/widget_total_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0h 0m"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />

    <!-- Category 1 -->
    <LinearLayout
        android:id="@+id/category_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">
        <TextView
            android:id="@+id/category_name_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Category 1"
            android:textColor="#BAC2DE"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <TextView
            android:id="@+id/category_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textColor="#A6E3A1"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Category 2 -->
    <LinearLayout
        android:id="@+id/category_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">
        <TextView
            android:id="@+id/category_name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Category 2"
            android:textColor="#BAC2DE"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <TextView
            android:id="@+id/category_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textColor="#89B4FA"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Category 3 -->
    <LinearLayout
        android:id="@+id/category_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp">
        <TextView
            android:id="@+id/category_name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Category 3"
            android:textColor="#BAC2DE"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <TextView
            android:id="@+id/category_time_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textColor="#F9E2AF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Category 4 -->
    <LinearLayout
        android:id="@+id/category_row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/category_name_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Category 4"
            android:textColor="#BAC2DE"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <TextView
            android:id="@+id/category_time_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0h 0m"
            android:textColor="#CBA6F7"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
